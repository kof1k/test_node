# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=webapp
DB_PASSWORD=SecurePassword123!
DB_NAME=user_management_system
DB_CONNECTION_LIMIT=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
API_VERSION=v1

# Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
API_RATE_LIMIT_MAX=1000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# File Upload
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Frontend URL
FRONTEND_URL=http://localhost:3000
ADMIN_EMAIL=admin@example.com

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=UserManagementSystem

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# API Keys
API_KEY_HEADER=X-API-Key
API_SECRET_HEADER=X-API-Secret

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# SSL (for production)
SSL_KEY_PATH=
SSL_CERT_PATH=

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Backup
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
